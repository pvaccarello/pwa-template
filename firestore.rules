rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TODO: Configura le regole di sicurezza per le tue collection

    // Esempio: gli utenti possono leggere/scrivere solo il proprio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Esempio: collection pubblica in lettura, scrittura solo autenticati
    // match /posts/{postId} {
    //   allow read: if true;
    //   allow create: if request.auth != null;
    //   allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    // }

    // La collection notificationQueue viene scritta dal client e letta dalla Cloud Function
    match /notificationQueue/{jobId} {
      allow create: if request.auth != null;
      allow read, delete: if false; // Solo le Cloud Functions possono leggere/eliminare
    }
  }
}
